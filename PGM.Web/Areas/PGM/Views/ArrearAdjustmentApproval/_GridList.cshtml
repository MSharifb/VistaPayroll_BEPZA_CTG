
<script type="text/javascript">

    $(document).ready(function () {

        $('#jqGrid').jqGrid({
            url: '@Url.Action("GetList")',
            datatype: 'json',
            mtype: 'POST',
            colNames: ['Id', 'Employee ID', 'Employee Name', 'Designation', 'Order Date', 'Effective Date', 'Adjustment Type'],
            colModel: [
                { name: 'Id', index: 'Id', align: 'left', search: false, hidden: true, edittype: 'text' },
                { name: 'EmpID', index: 'EmpID', align: 'center', width: '100px', search: true, edittype: 'text', formatter: viewformatEdiorLink },
                { name: 'EmployeeName', index: 'EmployeeName', align: 'left', width: '150px', search: true, edittype: 'text' },
                { name: 'DesignationName', index: 'DesignationId', align: 'left', width: '150px', search: false, edittype: 'text' },
                { name: 'OrderDate', index: 'OrderDate', align: 'center', width: '100px', search: false, edittype: 'text', formatter: 'date', formatoptions: { newformat: "Y-m-d" } },
                { name: 'EffectiveDate', index: 'EffectiveDate', align: 'center', width: '100px', search: false, edittype: 'text', formatter: 'date', formatoptions: { newformat: "Y-m-d" } },
                { name: 'AdjustmentType', index: 'AdjustmentType', align: 'left', width: '100px', search: true, edittype: 'text' }
            ],
            autowidth: true,
            caption: "Arrear Adjustment Revision",
            rowList: [20, 30, 40, 50, 100],
            pager: $('#jqGridPager'),
            rowNum: 20,
            sortname: 'EffectiveDate',
            sortorder: 'asc',
            viewrecords: true,
            height: '100%',
            width: '100%'
        });
        // Pager Function
        $("#jqSearch").jqGrid('filterGrid', '#jqGrid', { gridModel: true, gridNames: true, formtype: 'horizontal', autosearch: true, enableSearch: true, enableClear: true });
    });

    function viewformatEdiorLink(cellvalue, options, rowObject) {
        var url = '@Html.ActionLink("_name_", "Edit", new { id = "_id_" })';
        url = url.replace(/_name_/, cellvalue);
        url = url.replace(/_id_/, rowObject[0]);
        return url;
    }

    function deleteformateadorLink(cellvalue, options, rowObject) {
        if (rowObject[9] == 'Not Paid') {
            var url = '@Html.ActionLink(" ", "Delete", new { id = "_id_" }, new { @class = "deleteItem" })';
            url = url.replace(/_id_/, rowObject[0]);
            return url;
        }

        return "";
    }

</script>

