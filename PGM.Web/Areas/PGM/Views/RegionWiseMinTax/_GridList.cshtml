
<script type="text/javascript">
    $(document).ready(function () {

        $('#jqGrid').jqGrid({
            url: '@Url.Action("GetList")',
            datatype: 'json',
            mtype: 'POST',
            colNames: ['ID', 'RegionId', 'Income Year', 'Assessment Year', 'Region', 'Minimum Amount', 'Delete'],
            colModel: [
                  { name: 'Id', index: 'Id', align: 'left', search: false, hidden: true, edittype: 'text' },
                  { name: 'RegionId', index: 'RegionId', align: 'left', search: false, hidden: true, edittype: 'text' },

                  { name: 'IncomeYear', index: 'IncomeYear', align: 'center', search: true, width: '100px', edittype: 'select', surl: '@Url.Action("GetIncomeYearList")', formatter: viewformatEdiorLink },
                  { name: 'AssessmentYear', index: 'AssessmentYear', align: 'center', search: true, width: '100px', edittype: 'select', surl: '@Url.Action("GetAssessmentYearList")' },

                  { name: 'Region', index: 'Region', align: 'left', width: '200px', search: true, edittype: 'select', surl: '@Url.Action("GetRegionList")'},
                  { name: 'MinimumAmount', index: 'MinimumAmount', align: 'right', width: "70px", search: false, hidden: false, edittype: 'text' },
                  { name: 'Delete', index: 'Delete', align: 'right', search: false, hidden: IsDeleteAssigned, sortable: false, width: '25px', edittype: 'image', formatter: deleteformateadorLink }
            ],
            autowidth: true,
            caption: "Region wise minimum tax list",
            rowList: [20, 30, 40, 50, 100],
            pager: $('#jqGridPager'),
            rowNum: 20,
            viewrecords: true,
            height: '100%',
            width: '50%'
        });
        $("#jqSearch").jqGrid('filterGrid', '#jqGrid', { gridModel: true, gridNames: true, formtype: 'horizontal', autosearch: true, enableSearch: true, enableClear: true });

    });
    function deleteformateadorLink(cellvalue, options, rowObject) {
        var url = '@Html.ActionLink(" ", "Delete", new { id = "_id_" }, new { @class = "deleteItem" })';
        url = url.replace(/_id_/, rowObject[0]);
        return url;
    }
    function viewformatEdiorLink(cellvalue, options, rowObject) {

        var url = '@Html.ActionLink("_name_", "Edit", new { id = "_id_" })';
        url = url.replace(/_name_/, cellvalue);
        url = url.replace(/_id_/, rowObject[0]);
        return url;
    }
</script>
