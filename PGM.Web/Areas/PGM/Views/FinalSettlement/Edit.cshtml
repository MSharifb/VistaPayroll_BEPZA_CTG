
@model PGM.Web.Areas.PGM.Models.FinalSettlement.FinalSettlementViewModel
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/PGM/Views/Shared/_Layout.cshtml";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm("Edit", "FinalSettlement", FormMethod.Post, new { id = "frm" }))
{
   
    <fieldset>
        <div id="message" class="form-group messageBox clearfix">
            @Html.ValidationSummary(false, PGM.Web.Utility.Common.ValidationSummaryHead)
            @if (!string.IsNullOrEmpty(Model.ErrMsg))
            {
                <div id="ErrMsg" class="@Model.ErrClss">
                    @Model.ErrMsg
                </div>
            }
        </div>
        @Html.HiddenFor(model => model.EmployeeId)
        @Html.Partial("_CreateOrEdit", Model)       
        <div class="button-crude">
        @if ((new PGM.Web.Utility.AppConstant()).IsEditAssigned)
        {
            <input type="submit" value="Update" id="btnSave" name="btnSubmit" style="margin-right: 8px;" />
        }
        </div>
    </fieldset>
}
<div class="button-crude button-left">
    @Html.ActionLink("Back to List", "Index")
</div>