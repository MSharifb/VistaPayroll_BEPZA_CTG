
<script type="text/javascript">
    $(document).ready(function () {
        $('#jqGrid').jqGrid({
            url: '@Url.Action("GetList")',
            datatype: 'json',
            mtype: 'POST',
            colNames: ['ID', 'Income Year', 'Assessment Year', 'Invst. Rate(%)', 'Maximum Invst.', 'Excess Income(%)', 'Special Rebate(%)', 'Taxable Percentage', 'Tax Free Amount for Having Child With Disability', 'Delete'],
            colModel: [
                            { name: 'Id', index: 'ID', align: 'left', search: false, hidden: true, edittype: 'text' },
                            { name: 'IncomeYear', index: 'IncomeYear', align: 'center', width: '100px', search: true, edittype: 'select', formatter: viewformatEdiorLink, surl: '@Url.Action("GetIncomeYearList")' },
                            { name: 'AssessmentYear', index: 'AssessmentYear', align: 'center', search: true, width: '100px', edittype: 'select', surl: '@Url.Action("GetAssessmentYearList")' },

                            { name: 'InvestmentRate', index: 'InvestmentRate', align: 'right', search: false, width: '100px', edittype: 'text' },
                            { name: 'MaximumInvestment', index: 'MaximumInvestment', align: 'right', search: false, width: '100px', edittype: 'text' },
                            { name: 'ExcessIncomePercent', index: 'ExcessIncomePercent', align: 'right', search: false, width: '100px', edittype: 'text' },
                            { name: 'SpecialRebateRate', index: 'SpecialRebateRate', align: 'right', search: false, width: '100px', edittype: 'text' },
                            { name: 'TaxablePercentage', index: 'TaxablePercentage', align: 'right', search: false, width: '100px', edittype: 'text' },
                            { name: 'TaxFreeAmountForHavingChildWithDisability', index: 'TaxFreeAmountForHavingChildWithDisability', align: 'right', search: false, width: '100px', edittype: 'text' },
                            
                            { name: 'Delete', index: 'Delete', align: 'right', search: false, hidden: IsDeleteAssigned, sortable: false, width: '60px', edittype: 'image', formatter: deleteformateadorLink }
                    ],
            autowidth: true,
            caption: "Income Tax Rule List",
            rowList: [20, 30, 40, 50, 100],
            pager: $('#jqGridPager'),
            rowNum: 20,
            sortname: 'ID',
            sortorder: 'asc',
            viewrecords: true,
            height: '100%',
            width: '50%'
        });
        // Pager Function
        $("#jqSearch").jqGrid('filterGrid', '#jqGrid', { gridModel: true, gridNames: true, formtype: 'horizontal', autosearch: true, enableSearch: true, enableClear: true });
    });

    function deleteformateadorLink(cellvalue, options, rowObject) {
        var url = '@Html.ActionLink(" ", "Delete", new { id = "_id_" }, new { @class = "deleteItem" })';
        url = url.replace(/_id_/, rowObject[0]);
        return url;
    }

    function viewformatEdiorLink(cellvalue, options, rowObject) {
        var url = '@Html.ActionLink("_name_", "Edit", new { id = "_id_" })';
        url = url.replace(/_name_/, cellvalue);
        url = url.replace(/_id_/, rowObject[0]);
        return url;
    }
</script>


<script type="text/javascript">

    $(function () {

        $("a.deleteItem").live("click", function () {
            deleteLinkObj = $(this);  //for future use
            $('#delete-dialog').dialog('open');
            return false; // prevents the default behaviour
        });
        $('#delete-dialog').dialog({
            autoOpen: false, width: 320, resizable: false, modal: true, //Dialog options
            overlay: {
                backgroundColor: '#000',
                opacity: 0.5
            },
            buttons: {
                "Yes": function () {

                    $.post(deleteLinkObj[0].href, function (obj) {  //Post to action

                        if (obj.Success) {
                            $("#message").show().html("<b>" + obj.Message + "</b>").css("color", "Green");
                            $('#sButton').trigger('click');
                        }
                        else {
                            $("#message").show().html("<b>" + obj.Message + "</b>").css("color", "red");
                        }
                    });
                    $(this).dialog("close");
                },
                "No": function () {
                    $(this).dialog("close");
                }
            }
        });
    });

</script>
