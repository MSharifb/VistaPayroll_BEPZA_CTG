@model PGM.Web.Areas.PGM.Models.OtherAdjustmentDeductionAll.OtherAdjustmentDeductAll

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/PGM/Views/Shared/_Layout.cshtml";
}

@using (Ajax.BeginForm("Index", "OtherAdjustmentDeductionAll", new AjaxOptions { HttpMethod = "POST" }, new { id = "frm" }))
{
    @Html.HiddenFor(model => model.HeadType, new { id = "adjustType" })

    <fieldset>
        <div class="GroupBox" id="message" style="min-height:15px;">
            @Html.ValidationSummary(false, PGM.Web.Utility.Common.ValidationSummaryHead)
            @if (!string.IsNullOrEmpty(Model.ErrMsg))
            {
                <div id="ErrMsg" class="@Model.ErrClss">
                    @Model.ErrMsg
                </div>
            }
        </div>
        <div class="GroupBox">
            <div id="jqSearch">
            </div>
            <div class="clear">
            </div>
        </div>

        <div class="GroupBox">
            <div class="button-crude button-left">
                @if ((new PGM.Web.Utility.AppConstant()).IsAddAssigned)
                {
                    @Html.ActionLink("Add New", "Create")
                }
            </div>
            <div class="clear">
            </div>
        </div>
        <table id="jqGrid" cellpadding="0" cellspacing="0"></table>
        <div id="jqGridPager" style="text-align: center;">
        </div>
        <div id="divList">
            <div id='delete-dialog' title='Delete Record' style="height: 20px">
                <p style="line-height: 1em">
                    <span class='ui-icon ui-icon-alert' style='float: left; margin: 0 7px 20px 0;'></span>
                    Do you want to delete this record?
                </p>
            </div>
            @Html.Partial("_GridList")
        </div>
    </fieldset>
}

