                        { name: 'RevenueStamp', index: 'RevenueStamp', align: 'right', width: '50px', search: false, edittype: 'text', formatter: 'currency', formatoptions: { thousandsSeparator: ",", decimalPlaces: 2, prefix: "", suffix: "", defaultValue: '0.00'} },
