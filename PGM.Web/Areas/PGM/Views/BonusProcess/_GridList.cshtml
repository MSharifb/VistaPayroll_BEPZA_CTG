                        { name: 'BonusAmount', index: 'BonusAmount', align: 'right', width: '100px', search: false, edittype: 'text', formatter: 'currency', formatoptions: { thousandsSeparator: ",", decimalPlaces: 2, prefix: "", suffix: "", defaultValue: '0.00'} },
