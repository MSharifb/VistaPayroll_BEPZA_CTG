
<script type="text/javascript">

    $(document).ready(function () {
        $('#jqGrid').jqGrid({
            url: '@Url.Action("GetList")',
            editurl: '@Url.Action("EditParameterValue")',
            datatype: 'json',
            mtype: 'POST',
            colNames: ['ID', 'Report Name', 'Parameter Hints', 'Default Value'],
            colModel: [
                            { name: 'Id', index: 'Id', align: 'left', search: false, hidden: true, edittype: 'text' },
                            { name: 'ReportName', index: 'ReportName', align: 'left', search: true, width: '150px', edittype: 'text', formatter: viewformatEdiorLink },
                            { name: 'ReportParameterNameHints', index: 'ReportParameterNameHints', align: 'left', search: true, width: '150px', edittype: 'text' },
                            { name: 'ReportParameterDefaultValue', index: 'ReportParameterDefaultValue', align: 'left', search: true, width: '150px', edittype: 'text', editable: true }
                          ],
            autowidth: true,
            caption: 'Custom Report Information',
            rowList: [20, 30, 40, 50, 100],
            pager: $('#jqGridPager'),
            rowNum: 20,
            sortname: 'ReportName',
            sortorder: 'asc',
            viewrecords: true,
            height: '100%',
            width: '50%'
        });
        // Pager Function
        $("#jqSearch").jqGrid('filterGrid', '#jqGrid', { gridModel: true, gridNames: true, formtype: 'horizontal', autosearch: true, enableSearch: true, enableClear: true });
        $('#jqGrid').navGrid('#jqGridPager', { edit: true, add: false, del: false, search: false, refresh: false, view: false, position: "left", cloneToTop: false },
            { height: 'auto', width: 420, editCaption: "Edit Report Parameter Default Value", recreateForm: true, closeAfterEdit: true, errorTextFormat: function (data) { return 'Error: ' + data.responseText; } });
    });

    function viewformatEdiorLink(cellvalue, options, rowObject) {

        var url = '@Html.ActionLink("_name_", "ViewReport", new { id = "_id_" })';
        url = url.replace(/_name_/, cellvalue);
        url = url.replace(/_id_/, rowObject[0]);
        return url;
    }



</script>

