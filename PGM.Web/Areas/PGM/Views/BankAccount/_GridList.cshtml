@using PGM.Web.Areas.PGM.Models.BankAccount
@model IList<BankAccountModel>
            
<script type="text/javascript">

    $(document).ready(function () {
        $('#jqGrid').jqGrid({
            url: '@Url.Action("GetList")',
            datatype: 'json',
            mtype: 'POST',
            colNames: ['ID', 'Account For', 'Account No.', 'Bank Name', 'Branch Name', 'Address'],
            colModel: [
                            { name: 'Id', index: 'ID', align: 'left', search: false, hidden: true, edittype: 'text' },
                            { name: 'AccountFor', index: 'AccountFor', width: '70px', align: 'left', search: true, edittype: 'select', formatter: viewformatEdiorLink, surl: '@Url.Action("GetAccountForList")' },
                            { name: 'BankAccountNo', index: 'BankAccountNo', align: 'center', search: false, width: '60px', edittype: 'text'},
                            { name: 'BankId', index: 'BankId', align: 'left', search: true, width: '100px', edittype: 'select', surl: '@Url.Action("GetBankNameList")' },
                            { name: 'BranchName', index: 'BranchName', align: 'left', search: false, width: '100px', edittype: 'text' },
                            { name: 'BankAddress', index: 'BankAddress', align: 'left', search: false, edittype: 'text' }
                          ],
            autowidth: true,
            caption: "Bank Account List",
            rowList: [20, 30, 40, 50, 100],
            pager: $('#jqGridPager'),
            rowNum: 20,
            sortname: 'ID',
            sortorder: 'asc',
            viewrecords: true,
            height: '100%',
            width: '50%'
        });
        // Pager Function
        $("#jqSearch").jqGrid('filterGrid', '#jqGrid', { gridModel: true, gridNames: true, formtype: 'horizontal', autosearch: true, enableSearch: true, enableClear: true });

    });

    function viewformatEdiorLink(cellvalue, options, rowObject) {

        var url = '@Ajax.ActionLink("_name_", "Edit", null, new AjaxOptions { OnComplete = "OnCompleteAddnew" }, new { id = "_id_" })';
        url = url.replace(/_name_/, cellvalue);
        url = url.replace(/_id_/, rowObject[0]);
        url = url.replace(/Edit/, 'Edit/' + rowObject[0]);
        return url;
    }
</script>


<script type="text/javascript">

    $(function () {

        $("a.deleteItem").live("click", function () {
            deleteLinkObj = $(this);  //for future use
            $('#delete-dialog').dialog('open');
            return false; // prevents the default behaviour
        });
        $('#delete-dialog').dialog({
            autoOpen: false, width: 320, resizable: false, modal: true, //Dialog options
            overlay: {
                backgroundColor: '#000',
                opacity: 0.5
            },
            buttons: {
                "Yes": function () {

                    $.post(deleteLinkObj[0].href, function (obj) {  //Post to action

                        if (obj.Success) {
                            $("#message").show().html("<b>" + obj.Message + "</b>").css("color", "Green");
                            $('#sButton').trigger('click');
                        }
                        else {
                            $("#message").show().html("<b>" + obj.Message + "</b>").css("color", "red");
                        }
                    });
                    $(this).dialog("close");
                },
                "No": function () {
                    $(this).dialog("close");
                }
            }
        });
    });

</script>
