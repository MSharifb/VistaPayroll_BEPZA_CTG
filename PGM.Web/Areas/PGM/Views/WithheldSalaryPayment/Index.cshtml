@model PGM.Web.Areas.PGM.Models.WithheldSalaryPayment.WithheldSalaryPaymentViewModel
@using PGM.Web.Helpers
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/PGM/Views/Shared/_Layout.cshtml";
}
@using (Ajax.BeginForm("Index", "WithheldSalaryPayment", new AjaxOptions { HttpMethod = "POST" }, new { id = "frm" }))
{
    <fieldset>
        <div class="GroupBox" id="message">
            @Html.ValidationSummary(false, PGM.Web.Utility.Common.ValidationSummaryHead)
            @if (Model != null && !string.IsNullOrEmpty(Model.ErrMsg))
            {
                <div class="@Model.errClass">
                    @Model.ErrMsg
                    nbo
                </div>
            }
        </div>
        <div class="GroupBox">
            <div id="jqSearch">
            </div>
            <div class="clear">
            </div>
        </div>
        <table id="jqGrid" cellpadding="0" cellspacing="0"></table>
        <div id="jqGridPager" style="text-align: center;">
        </div>
        <div id="divList">
            @Html.Partial("_GridList")
        </div>
    </fieldset>
}
