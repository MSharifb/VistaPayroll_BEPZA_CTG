@model PGM.Web.Models.LogOnModel
@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
    ViewBag.Title = "Log On";
}
<br />
<br />

@using (Html.BeginForm())
{

    <div class="form-group">
        <label for="username" class="control-label">Username</label>
        <div class="input-group">
            <div class="input-group-addon"><i class="fa fa-user"></i></div>
            @Html.TextBoxFor(m => m.UserName, new { @id = "username", @class = "form-control", @placeholder = "Username" })
        </div>
    </div>
    <div class="form-group">
        <label for="password" class="control-label">Password</label>
        <div class="input-group">
            <div class="input-group-addon"><i class="fa fa-lock"></i></div>
            @Html.PasswordFor(m => m.Password, new { @id = "password", @class = "form-control", @placeholder = "Password" })
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6 checkbox">
            <label>
                @Html.CheckBoxFor(m => m.RememberMe) Remember me
            </label>
        </div>
        <div class="col-sm-6 text-right">
            <button type="submit" class="btn btn-primary"><i class="fa fa-sign-in"></i> Login</button>
        </div>
    </div>



}
