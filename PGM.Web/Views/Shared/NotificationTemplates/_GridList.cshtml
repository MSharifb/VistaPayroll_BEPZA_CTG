<style>
    .ui-datepicker-trigger {
        z-index: 1000;
    }
</style>

<script type="text/javascript">

    $(document).ready(function () {
        $('#jqGrid').jqGrid({
            url: '@Url.Action("GetMyNotificationList", "Home")',
            datatype: 'json',
            mtype: 'POST',
            colNames: ['Id', 'Module', 'Notification Type', 'Notificaiton Date', 'Message', 'Read Status'],
            colModel: [

                { name: 'ID', index: 'ID', align: 'left', search: false, hidden: true },
                { name: 'Module', index: 'Module', align: 'left', search: true, hidden: true, edittype: 'select', surl: '@Url.Action("GetModuleList", "NotificationFlowSetup", new {area="PRM"})' },
                { name: 'NotificationType', index: 'NotificationType', align: 'center', search: true, width: '50px', edittype: 'select', surl: '@Url.Action("GetNotificationTypeList", "NotificationFlowSetup", new {area="PRM"})' },
                { name: 'NotificationDate', index: 'NotificationDate', align: 'center', search: true, width: '50px', edittype: 'text', formatter: 'date', formatoptions: { newformat: "Y-m-d" } },
                { name: 'Message', index: 'Message', align: 'left', search: false, width: '200px', edittype: 'text' },
                { name: 'Read', index: 'Delete', align: 'right', search: false, sortable: false, width: '20px', formatter: 'checkbox' }
                
            ],
            autowidth: true,
            caption: "Notification List",
            rowList: [20, 30, 40, 50, 100],
            pager: $('#jqGridPager'),
            rowNum: 20,
            sortname: 'NotificationType',
            sortorder: 'asc',
            viewrecords: true,
            height: '100%',
            width: '50%',
            grouping: true,
            groupingView: {
                groupField: ['Module'],
                groupColumnShow: [false],
                groupText: ['<b>{0} - {1} Notifications(s)</b>']
            }
        });
        // Pager Function
        $("#jqSearch").jqGrid('filterGrid', '#jqGrid', { gridModel: true, gridNames: true, formtype: 'horizontal', autosearch: true, enableSearch: true, enableClear: true });

    });
   
</script>

<script type="text/javascript">


    $(function () {

        $('#sg_NotificationDate').datepicker({ buttonImage: '@Url.Content("~/Content/Images/calendar-blue.gif")', dateFormat: 'yy-mm-dd', buttonImageOnly: true, showOn: "button", buttonText: 'Choose' });
    });

</script>





